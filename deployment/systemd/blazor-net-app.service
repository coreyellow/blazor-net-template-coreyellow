[Unit]
Description=BlazorNetApp - .NET REST API Service
After=network.target

[Service]
Type=notify
# User=www-data
# Group=www-data
WorkingDirectory=/opt/blazor-net-app
ExecStart=/opt/blazor-net-app/BlazorNetApp.Api
Restart=always
RestartSec=10
KillSignal=SIGINT
SyslogIdentifier=blazor-net-app
Environment=ASPNETCORE_ENVIRONMENT=Production
Environment=DOTNET_PRINT_TELEMETRY_MESSAGE=false
TimeoutStartSec=30
TimeoutStopSec=30

[Install]
WantedBy=multi-user.target
